  <h3>Lista post√≥w</h3>
  <a href="<%= new_post_path %>" class="btn btn-success mb-4">Add new post</a>
  <ul class="nav nav-tabs mb-2">
    <li class="nav-item">
      <a class="nav-link <%= params[:action] == "index" ? "active" : "" %>" href="<%= posts_path %>">All</a>
    </li>
    <li class="nav-item">
      <a class="nav-link <%= params[:action] == "published" ? "active" : "" %>" href="<%= published_posts_path %>">Published</a>
    </li>
  </ul>
  <table class="table table-striped">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
        <th>Published?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.body %></td>
          <td><%= post.published ? "yes" : "no" %></td>
          <td>
            <%= link_to "Show", post_path(post), class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-success btn-sm" %>
            <%= link_to "Delete", confirm_delete_post_path(post), class: "btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
