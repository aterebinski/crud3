<div class="container">
  <div class="my-4">
    <h1>Lista post√≥w</h1>

  </div>
  <a href="<%= new_post_path %>" class="btn btn-success mb-4">Add new post</a>
  <table class="table table-striped">
    <thead class="thead-dark" >
      <tr>
        <th>#</th>
        <th>Title</th>
        <th>Author</th>
        <th>Content</th>
        <th>Published?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= post.title %></td>
          <td><%= post.author %></td>
          <td><%= post.body %></td>
          <td><%= post.published ? "yes" : "no" %></td>
          <td>
            <%= link_to "Show", post_path(post), class: "btn btn-primary btn-sm" %>
            <%= link_to "Edit", edit_post_path(post), class: "btn btn-success btn-sm" %>
            <%= link_to "Delete", post_path(post), method: :delete, class: "btn btn-danger btn-sm", data:{confirm: "Do you really want to delete this post?\nLoram"} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
